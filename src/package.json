{
  "main": "index.html",
  "name": "Haroopad",
  "description": "The Next Document processor based on Markdown",
  "version": "0.13.2",
  "keywords": [
    "markdown",
    "haroopress",
    "editor"
  ],
  "window": {
    "icon": "logo.png",
    "toolbar": true,
    "show": false,
    "width": 0,
    "height": 0,
    "min_width": 700,
    "min_height": 350,
    "frame": false
  },
  "single-instance": true,
  "webkit": {
    "plugin": true
  },
  "user-agent": "%name/%ver (%osinfo) NodeWebkit/%nwver AppleWebKit/%webkit_ver",
  "chromium-args": "--enable-threaded-compositing --disable-gpu",
  "app": {
    "upgrade": "http://pad.haroopress.com/upgrade.json"
  },
  "maintainers": [
    {
      "name": "Rhio Kim",
      "email": "rhio.kim@gmail.com",
      "web": "http://pad.haroopress.com",
      "blog": "http://pad.haroopress.com/page.html",
      "feedback": "http://haroopad.userecho.com"
    }
  ],
  "licenses": [
    {
      "type": "GPLv3",
      "url": "http://www.example.com/licenses/gpl.html"
    }
  ],
  "bugs": "https://github.com/rhiokim/haroopad/issues",
  "repositories": [
    {
      "type": "git",
      "url": "git@github.com:rhiokim/haroopad.git"
    }
  ],
  "dependencies": {
    "base62": "~1.0.0",
    "clean-css": "~2.2.19",
    "css": "~2.1.0",
    "download-github-repo": "~0.1.3",
    "fs-extra": "~0.12.0",
    "humanize": "0.0.9",
    "marked": "git://github.com/rhiokim/marked.git",
    "mime": "~1.2.11",
    "moment": "~2.8.4",
    "nodemailer": "~1.3.0",
    "optimist": "~0.6.1",
    "pouchdb": "^3.2.1",
    "readdir": "0.0.13"
  }
}
